# Codarr server URL
CODARR_SERVER_URL=http://localhost:7878

# Optional node identity override (must be unique)
CODARR_NODE_NAME=

# Optional job temp working directory
CODARR_TEMP_DIR=

# Optional path mappings (JSON array or delimited: from=>to;from=>to)
CODARR_PATH_MAPS=

# Media tool paths (optional)
CODARR_FFMPEG_PATH=
CODARR_FFPROBE_PATH=
CODARR_HANDBRAKE_CLI_PATH=
CODARR_MKVEDIT_PATH=
CODARR_INTEL_GPU_TOP_PATH=
CODARR_INTEL_XPU_SMI_PATH=
CODARR_RADEONTOP_PATH=
CODARR_AMD_SMI_PATH=
CODARR_JOB_SLOTS_CPU=1
CODARR_JOB_SLOTS_GPU=0

# Disable job polling until healthcheck/transcode is implemented
CODARR_ENABLE_JOBS=false

# Node private key (PEM, file path, or base64:...)
CODARR_NODE_PRIVATE_KEY=

# Node public key (PEM, file path, or base64:...)
CODARR_NODE_PUBLIC_KEY=

# Server public key (PEM, file path, or base64:...)
CODARR_SERVER_PUBLIC_KEY=

# Allowed timestamp skew in seconds for signed responses
CODARR_API_SIGNATURE_SKEW_SEC=300
