# Server bind address and port
CODARR_SERVER_HOST=0.0.0.0
CODARR_SERVER_PORT=7878

# Public URL used for logging/links
CODARR_PUBLIC_URL=http://localhost:7878

# Node staleness (milliseconds without heartbeat before considered stale)
CODARR_NODE_STALE_MS=60000

# Debug mode (enables reset button in UI)
CODARR_DEBUG=false

# Log level: silent|error|warn|info|verbose
CODARR_LOG_LEVEL=info
